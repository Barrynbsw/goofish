<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backened.mapper.CategoryMapper">
    <select id="catepage" resultType="com.example.backened.entity.categories">
        SELECT
            *
        FROM
            categories
        WHERE
            categories.ParentCategoryID = 0
    </select>
    <select id="getChildrenbyID" resultType="com.example.backened.entity.categories">
        SELECT
            *
        FROM
            categories
        WHERE
            categories.ParentCategoryID = #{CategoryID}
    </select>
    <select id="getByID" resultType="com.example.backened.entity.categories">
        SELECT
            *
        FROM
            categories
        WHERE
            categories.CategoryID = #{CategoryID}
    </select>
</mapper>